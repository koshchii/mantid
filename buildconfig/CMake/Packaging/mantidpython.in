#!/bin/sh
#
# Launch python using any necessary LD_PRELOAD behaviour and mantid libraries
#
# Script is configured by CMake

@PREAMBLE@
@JEMALLOC_DEFINITIONS@

# Define where python libraries are
LOCAL_PYTHONPATH=@LOCAL_PYPATH@
if [ -n "${PYTHONPATH}" ]; then
    LOCAL_PYTHONPATH=${LOCAL_PYTHONPATH}:${PYTHONPATH}
fi

# Define which qt backend to use
if [ -n "${QT_API}" ]; then
    LOCAL_QT_API=${QT_API}
else
    LOCAL_QT_API="pyqt5" # force to use qt5
fi

if [ -n "$1" ] && [ "$1" = "--classic" ]; then
    shift
    set -- @WRAPPER_PREFIX@@PYTHON_EXEC_LOCAL@ @PYTHON_ARGS@ "$@"@WRAPPER_POSTFIX@
elif [ -n "$1" ] && [ -n "$2" ] && [ "$1" = "-n" ]; then
    ranks=$2
    shift 2
    set -- mpirun -n $ranks @WRAPPER_PREFIX@@PYTHON_EXEC_LOCAL@ @PYTHON_ARGS@ "$@"@WRAPPER_POSTFIX@
else
    IPYTHON_STARTUP="import IPython;IPython.start_ipython()"
    set -- @WRAPPER_PREFIX@@PYTHON_EXEC_LOCAL@ @PYTHON_ARGS@ -c "${IPYTHON_STARTUP}" "$@"@WRAPPER_POSTFIX@
fi

LD_PRELOAD=${LOCAL_PRELOAD} \
    PYTHONPATH=${LOCAL_PYTHONPATH} \
    @QT_QPA@QT_API=${LOCAL_QT_API} \
    LD_LIBRARY_PATH=${LOCAL_LDPATH} exec "$@"
